---
import Layout from "../layouts/Layout.astro"
import { getThankyous } from "../utils/sanity";
import { urlFor } from "../utils/image";

const thanks = await getThankyous("thanks");
const [thank] = thanks;
---
<Layout title="Thank you from Taft Hill Acres | Fort Collins Boarding Facility">
     <div class="w-5/6 lg:w-1/2 bg-tan mx-auto p-8">
       <h2 class="text-green text-5xl text-center mb-4">{thank.title}</h2>
       <h3 class="text-darktan text-2xl">{thank.subtitle}</h3>
       </div>
       <div class="w-1/2 mx-auto">
       <img class="w-full" src={urlFor(thank.mainImage).url()} alt={thank.mainImage} />
     </div>
</Layout>