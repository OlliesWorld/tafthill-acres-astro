{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowJs": true,
        "checkJs": false,
        "strict": true,
        "noEmit": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "types": ["vite/client", "astro/client"]
    },
    "include": ["./**/*.ts", "./**/*.astro", "./**/*.d.ts"],
    "exclude": ["node_modules"]
}